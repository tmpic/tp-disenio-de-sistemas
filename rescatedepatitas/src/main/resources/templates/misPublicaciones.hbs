<!-- https://mvnrepository.com/artifact/com.sparkjava/spark-template-handlebars -->
<header>
    <link rel="stylesheet" href="css/misPublicaciones.css">
    <link rel="StyleSheet" href="../css/index.css" title="Contemporaneo" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
</header>




<body>
{{> navBar.hbs}}
  <!-- Tab links -->
  <div class="tab">
    <button class="tablinks" onclick="openPublis(event, 'publicacionesAdoptar')">Publicaciones de dar en adopcion</button>
    <button class="tablinks" onclick="openPublis(event, 'publicacionesAdoptante')">Publicaciones de intencion de adopcion</button>
    <button class="tablinks" onclick="openPublis(event, 'publicacionesRescate')">Publicaciones de rescate</button>
  </div>

  <!-- Tab content -->
  <div id="publicacionesAdoptante" class="tabcontent">
    <div class="row">
			{{#publicacionesAdoptante}}
			<div class="column">
            				<div class="card">
                                <dd>
                                      <div class="container">
                                        <div class="row">
                                          <div class="col-3"></div>
                                          <div class="col-6">

                                          </div>
                                        </div>

                                      </div>
                                </dd>
            					<div class="info-publicacionesAdoptante">
            						<p>Estado: {{estado}}</p>
                                    <p>Fecha: {{fecha}}</p>
                                    <p>{{descripcion}}</p>
            						<p><button class="buttonn" onclick="redirigirDetallePublicacion('{{id}}')">VER</button></p>
                                    <p><button class="buttonn" onclick="eliminarPublicacion('{{id}}')">BORRAR</button></p>
            					</div>
            				</div>
            			</div>
			{{/publicacionesAdoptante}}
		</div>
  </div>

  <div id="publicacionesAdoptar" class="tabcontent">
    <div class="row">
			{{#publicacionesDarAdopcion}}
            <div class="column">
            				<div class="card">
                                <dd>
                                  <div class="container">
                                    <div class="row">
                                      <div class="col-3"></div>
                                      <div class="col-6">
                                        <!-- Carousel -->
                                        <div id="carouselMascota" class="carousel slide " data-ride="carousel">
                                          <ol class="carousel-indicators">
                                            {{#each fotos}}
                                              <li data-target="#carouselMascota" data-slide-to="{{@index}}" {{#unless @index}}class="active"{{/unless}}></li>
                                              {{!-- <li data-target="#carouselMascota" data-slide-to="1"></li>
                                              <li data-target="#carouselMascota" data-slide-to="2"></li> --}}
                                            {{/each}}
                                          </ol>
                                          <div class="carousel-inner">

                                            {{#each fotos}}
                                            <div class="carousel-item {{#unless @index}}active{{/unless}}">
                                              <img class="d-block w-100" src="&#x2f;{{ruta}}" alt="First slide">
                                            </div>
                                            {{/each}}

                                            {{!-- <div class="carousel-item active">
                                              <img class="d-block w-100" src="img/Mascotas/Mascota1/1.jfif" alt="First slide">
                                            </div>
                                            <div class="carousel-item">
                                              <img class="d-block w-100" src="img/Mascotas/Mascota2/2.jfif" alt="Second slide">
                                            </div>
                                            <div class="carousel-item">
                                              <img class="d-block w-100" src="https://picsum.photos/id/237/200/300" alt="Third slide">
                                            </div> --}}
                                          </div>
                                          <a class="carousel-control-prev" href="#carouselMascota" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                          </a>
                                          <a class="carousel-control-next" href="#carouselMascota" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                          </a>
                                        </div>
                                      </div>
                                    </div>

                                  </div>
                                </dd>
            					<div class="info-publicacionesDarAdopcion">
            						<p>Estado: {{estado}}</p>
                                    <p>Fecha: {{fecha}}</p>
                                    <p>{{descripcion}}</p>
            						<p><button class="buttonn" onclick="redirigirDetallePublicacion('{{id}}')">VER</button></p>
                                    <p><button class="buttonn" onclick="eliminarPublicacion('{{id}}')">BORRAR</button></p>
            					</div>
            				</div>
            			</div>
			{{/publicacionesDarAdopcion}}
		</div>
  </div>

  <div id="publicacionesRescate" class="tabcontent">
    <div class="row">
			{{#publicacionesRescate}}
			<div class="column">
				<div class="card">
					<dd>
                      <div class="container">
                        <div class="row">
                          <div class="col-3"></div>
                          <div class="col-6">
                            <!-- Carousel -->
                            <div id="carouselMascota" class="carousel slide " data-ride="carousel">
                              <ol class="carousel-indicators">
                                {{#each fotos}}
                                  <li data-target="#carouselMascota" data-slide-to="{{@index}}" {{#unless @index}}class="active"{{/unless}}></li>
                                  {{!-- <li data-target="#carouselMascota" data-slide-to="1"></li>
                                  <li data-target="#carouselMascota" data-slide-to="2"></li> --}}
                                {{/each}}
                              </ol>
                              <div class="carousel-inner">

                                {{#each fotos}}
                                <div class="carousel-item {{#unless @index}}active{{/unless}}">
                                  <img class="d-block w-100" src="&#x2f;{{ruta}}" alt="First slide">
                                </div>
                                {{/each}}

                                {{!-- <div class="carousel-item active">
                                  <img class="d-block w-100" src="img/Mascotas/Mascota1/1.jfif" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                  <img class="d-block w-100" src="img/Mascotas/Mascota2/2.jfif" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                  <img class="d-block w-100" src="https://picsum.photos/id/237/200/300" alt="Third slide">
                                </div> --}}
                              </div>
                              <a class="carousel-control-prev" href="#carouselMascota" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                              <a class="carousel-control-next" href="#carouselMascota" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </div>
                          </div>
                        </div>

                      </div>
                    </dd>
					<div class="info-publicacionesRescate">
					    <p>Estado: {{estado}}</p>
					    <p>Fecha: {{fecha}}</p>
						<p>{{descripcion}}</p>
						<p><button class="buttonn" onclick="redirigirDetallePublicacion('{{id}}')">VER</button></p>
						<p><button class="buttonn" onclick="eliminarPublicacion('{{id}}')">BORRAR</button></p>
					</div>
				</div>
			</div>
			{{/publicacionesRescate}}
		</div>
  </div>


</body>
